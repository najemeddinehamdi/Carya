	@media (min-width: 1200px)
		&__logo
			width auto
			margin-right 50px
		&__btn
			display none
		&__actions
			margin-right 0
			margin-left 50px
		&__menu
			flex-direction row
			align-items center
			width auto
			padding 0
			position relative
			top auto
			right auto
			bottom auto
