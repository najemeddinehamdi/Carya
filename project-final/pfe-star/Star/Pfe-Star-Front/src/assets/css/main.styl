$white = #fff
$black = #000

$grey = #8a94a6
$darkgrey = #33334f
$lightgrey = #4e5d78

$mainclr = #189cf4
$mainclrdark = #111728

$border-color = #ebecf0
$bg = #edf1f7

$bgg = linear-gradient(1turn, #f1f6fd 30%, #edf1f7)
$bgs = 3px 3px 9px rgba(164,164,186,.2)
$bgsh2 = 3px 3px 9px rgba(164,164,186,.3)

$bgh = linear-gradient(90deg, #6cc4ff 6%, #189cf4)
$bgsh = 3px 3px 9px rgba(55,170,247,.3)

$red = #eb5757
$green = #29B474
$blue = #02B3E4
$purple = #8051d4
$orange = #f9ab00
$pink = #d23787
$yellow = #FFDC0F

/*==============================
	Fonts
==============================*/
@import url('https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,400;0,600;1,400&family=Open+Sans:wght@400;600&display=swap')

/*==============================
	Common styles
==============================*/
html
	-webkit-text-size-adjust 100%
	-ms-text-size-adjust 100%
html
body
	height 100%
body
	font-family 'Open Sans', sans-serif
	font-weight 400
	background-color $bg
	-webkit-font-smoothing antialiased
button
	padding 0
	border none
	background-color transparent
	transition .5s ease
	transition-property color, background-color, border-color, box-shadow
	cursor pointer
	&:focus
		outline none
a
	text-decoration none
	transition .5s ease
	transition-property color, background-color, border-color, box-shadow
	&:hover
	&:active
	&:focus
		outline none
		text-decoration none
input
textarea
select
	padding 0
	margin 0
	border-radius 0
	-webkit-appearance none
	-moz-appearance none
	-ms-appearance none
	appearance none
	box-shadow none
	transition .5s ease
	transition-property color, border-color, box-shadow
	&:focus
		outline none

select::-ms-expand
	display none

input::-webkit-outer-spin-button
input::-webkit-inner-spin-button
	-webkit-appearance none
	margin 0

input[type=number]
	-moz-appearance textfield

ul
	margin 0
	padding 0
	list-style none

::-moz-selection
	background $white
	color $darkgrey
	text-shadow none
::selection
	background $white
	color $darkgrey
	text-shadow none

::-webkit-input-placeholder
	color $grey
	opacity 1
::-moz-placeholder
	color $grey
	opacity 1
:-moz-placeholder
	color $grey
	opacity 1
:-ms-input-placeholder
	color $grey
	opacity 1

:focus
	outline -webkit-focus-ring-color auto 0px

:focus-visible
	outline 0px dotted

body::-webkit-scrollbar
	width 16px

body::-webkit-scrollbar-track
	background $white

body::-webkit-scrollbar-thumb
	background-color rgba($grey, .3)
	outline 0 solid $white

@media (min-width: 1400px)
	.container
	.container-lg
	.container-md
	.container-sm
	.container-xl
	.container-xxl
		max-width 1224px

/*==============================
	Header
=============================*/
.header
	display block
	position fixed
	top 0
	left 0
	right 0
	width auto
	height 70px
	background-color $bg
	z-index 101
	transition box-shadow .5s ease
	&--active
		box-shadow $bgs
	&--page
		background $bgg
		box-shadow $bgs
		border-bottom 1px solid $white
	&__content
		display flex
		flex-direction row
		justify-content space-between
		align-items center
		height 70px
		width 100%
		position relative
	&__logo
		display inline-flex
		flex-direction row
		justify-content flex-start
		align-items center
		height 40px
		img
			width auto
			height 40px
			display block
	&__actions
		display inline-flex
		flex-direction row
		justify-content flex-end
		align-items center
		width auto
		margin-left auto
		margin-right 42px
	&__action
		display flex
		flex-direction row
		justify-content center
		align-items center
		height 100%
		width auto
		position relative
		margin-left 20px
		&:first-child
			margin-left 0
	&__action-btn
		display flex
		flex-direction row
		justify-content center
		align-items center
		height 40px
		width 40px
		background-color $mainclr
		border-radius 14px
		span
			display none
			position relative
			z-index 2
		svg
			width 22px
			height auto
			fill $white
			transition fill .5s ease
			position relative
			z-index 2
		&:before
			content ''
			position absolute
			display flex
			flex-direction row
			justify-content center
			align-items center
			top 0
			bottom 0
			left 0
			right 0
			z-index 1
			background $bgh
			opacity 0
			transition opacity .5s ease
			pointer-events none
			border-radius 14px
		&:hover
			box-shadow $bgsh
			svg
				fill $white
			&:before
				opacity 1
	&__btn
		position absolute
		width 22px
		height 22px
		display block
		right 0
		top 24px
		span
			position absolute
			display flex
			flex-direction column
			justify-content flex-start
			align-items flex-start
			right 0
			width 22px
			height 2px
			background-color $lightgrey
			border-radius 2px
			transition .5s ease
			transition-property width, background-color
			&:first-child
				top 0
			&:nth-child(2)
				top 10px
				width 16px
			&:last-child
				top 20px
				width 10px
		&:hover
			span
				background-color $mainclr
		&--active
			span
				background-color $mainclr
				&:nth-child(2)
					width 22px
				&:last-child
					width 22px
	&__menu
		display flex
		flex-direction column
		justify-content flex-start
		align-items flex-start
		position fixed
		top 70px
		right 0
		bottom 0
		background $bgg
		box-shadow $bgs
		border-left 1px solid $white
		border-top 1px solid $white
		z-index 99
		width 240px
		padding 25px 25px 0
		transform translate3d(241px, 0, 0)
		transition transform .5s ease
		&--active
			transform translate3d(0, 0, 0)
	&__nav
		display flex
		flex-direction column
		justify-content flex-start
		align-items flex-start
		width 100%
		position relative
	&__nav-item
		display inline-flex
		flex-direction column
		justify-content flex-start
		align-items flex-start
		margin-bottom 20px
		position relative
		&:last-child
			margin-bottom 0
	&__nav-link
		font-size 14px
		color $lightgrey
		line-height 22px
		height 22px
		display inline-flex
		flex-direction row
		justify-content flex-start
		align-items center
		font-weight 400
		font-family: 'Nunito', sans-serif
		svg
			fill $lightgrey
			width 14px
			height auto
			transition fill .5s ease
			margin-left 1px
			margin-top 2px
		&--menu
			svg
				width 20px
				margin-top 0
				margin-left 0
		&--active
			color $mainclr
			cursor default
			font-weight 600
			&:hover
				color $mainclr !important
		&:hover
		&[aria-expanded="true"]
			color $mainclr
			svg
				fill $mainclr
	&__nav-menu
		display flex !important
		flex-direction column
		justify-content flex-start
		align-items flex-start
		position absolute
		z-index -1
		pointer-events none
		opacity 0
		top 0
		border-radius 20px
		padding 0 16px
		width 170px
		transition .5s ease
		transition-property margin-top, opacity
