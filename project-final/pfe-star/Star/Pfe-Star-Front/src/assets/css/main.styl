		a
			display flex
			flex-direction row
			justify-content flex-start
			align-items center
			color $lightgrey
			font-size 14px
			font-weight 400
			transition color .5s ease
			position relative
			font-family 'Nunito', sans-serif
			svg
				fill $lightgrey
				width 14px
				height auto
				transition .5s ease
				margin-left 1px
				margin-top 2px
			&:hover
